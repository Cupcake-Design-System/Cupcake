{
  "hooks": {
    "before:init": "npm run build",
    "after:bump": ["npm run build", "npx auto-changelog -p"]
  },
  "git": {
    "changelog": "npx auto-changelog --stdout --commit-limit false -u --template ./changelog-template.hbs",
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "commitMessage": "Release %s ðŸš€",
    "tagAnnotation": "Release %s ðŸš€",
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "Release %s ðŸš€",
    "releaseNotes": "npx auto-changelog --stdout --commit-limit false -u --template ./changelog-template.hbs",
    "preRelease": true,
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  }
}
