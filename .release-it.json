{
  "hooks": {
    "before:init": ["npm run lint", "npm test"],
    "after:bump": ["npm run build", "npx auto-changelog -p"],
    "after:git:release": "echo After git push, before github release",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "dist": {
      "baseDir": null
  },
  "npm": {
    "publish": true
  },
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "commitMessage": "Release %s ðŸš€",
    "tagAnnotation": "Release %s ðŸš€",
    "changelog": "npx auto-changelog --stdout --commit-limit false -u --template ./changelog-template.hbs --output CHANGELOG.md"
  },
  "github": {
    "release": true,
    "releaseName": "Release %s ðŸš€",
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  }
}
