{
  "version": "2.0.0",
  "name": "cupcake",
  "description": "Design System framework.",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "test": "mocha build/test",
    "autoprefixer": "postcss -u autoprefixer -r dist/cupcake.css",
    "scss": "node-sass --output-style expanded -o dist src/scss/cupcake.scss",
    "docs-css": "node-sass --output-style expanded -o dist src/docs/demo.scss",
    "lint": "stylelint src/scss/ --syntax scss || true",
    "lint-docs": "stylelint src/docs/demo.scss --syntax scss || true",
    "serve": "browser-sync start --server 'dist' --files \"dist/**/*, !node_modules/**/*.html\"",
    "build:css": "run-s lint scss autoprefixer",
    "build:css-docs": "run-s lint-docs docs-css",
    "build:html": "gulp",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:docs": "onchange './src/docs/*.scss' -- run-s build:css-docs",
    "watch:html": "onchange 'src/docs/**/*.{html,md,json,yml}' -- run-s build:html",
    "watch": "run-p watch:*",
    "start": "run-p build watch serve",
    "precommit": "lint-staged && npm run lint",
    "postinstall": "run-p build watch serve"
  },
  "browserslist": [
    "> 2%",
    "IE 10"
  ],
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss"
  },
  "devDependencies": {
    "@cupcake-ds/cupcake-sprinkles": "^0.2.2",
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "fabricator-assemble": "^1.2.0",
    "gulp": "^3.9.1",
    "handlebars": "^4.0.12",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "sass-true": "^4.0.0",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-scss": "^3.3.1"
  }
}
