{
  "name": "@cupcake-ds/cupcake",
  "version": "2.0.1",
  "description": "Design System framework.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cupcake-Design-System/Cupcake/"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "mocha test",
    "lint": "stylelint src/scss/ --syntax scss || true",
    "build": "run-s lint && gulp prod",
    "release": "release-it",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "start": "gulp",
    "precommit": "lint-staged && npm run lint"
  },
  "browserslist": [
    "> 2%",
    "IE 10"
  ],
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "changelog-template.hbs",
    "commitLimit": false,
    "package": true
  },
  "devDependencies": {
    "auto-changelog": "^1.16.1",
    "autoprefixer": "^9.6.5",
    "browser-sync": "^2.26.7",
    "del": "^5.1.0",
    "fabricator-assemble": "^1.4.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-changed": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "release-it": "^12.4.3",
    "sass-true": "^4.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-strict-value": "^1.1.6",
    "stylelint-scss": "^3.11.1"
  }
}
